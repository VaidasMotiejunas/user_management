{% extends 'base.html.twig' %}

{% block title %}Admin panel{% endblock %}

{% block body %}

<h4>User: {{user.name}} data</h4>
<table>
    <thead>
        <th>name</th>
        <th>groups</th>
    </thead>
    <tbody>
        <td>{{user.name}}</td>
        <td>
        {% for group in user.groups %}
            {{group.name}}
        {% endfor %}
        </td>
    </tbody>
</table>

<button type="button"><a href="{{path('index')}}">Go back to index</a></button>

{% endblock %}
